class Solution {
    public int pivotInteger(int n) {
        int sum = n*(n+1)/2;
        int sum1 =0;
        int i = 1;
        if(n==1){
            return 1;
        }
        for(i =1; i <= n ; i++){
            sum1 = sum1 + i;
        if(sum-sum1+i == sum1){
            return i;
        }
    }
        return -1;
    }
}
